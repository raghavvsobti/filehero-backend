datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  fileMasterId String?  @db.ObjectId
}

model FileMaster {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  url          String
  userId       String
  taggedUserId String?
  views        Int     @default(0)
  order        Int     @default(-1)
}
